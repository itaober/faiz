{
  "name": "faiz",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "next lint .",
    "lint:fix": "next lint . --fix",
    "prepare": "simple-git-hooks",
    "start": "next start"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "npx --no-install commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "pnpm exec prettier --write",
      "pnpm exec next lint . --fix"
    ]
  },
  "dependencies": {
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@itaober/commitlint-config": "^1.0.0",
    "@itaober/eslint-config": "^1.0.5",
    "@itaober/prettier-config": "^1.0.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
